@page "/logout"
@inject NavigationManager Navigation

<div class="logout-container text-center">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">جار تسجيل الخروج...</span>
    </div>
    <p class="mt-3">جار تسجيل الخروج...</p>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        // Use a server-side logout endpoint to avoid header conflicts
        Navigation.NavigateTo("/logout-handler", forceLoad: true);
    }
}

<style>
    .logout-container {
        min-height: 50vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
</style>
