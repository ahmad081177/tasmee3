@page "/admin/reports"
@layout AdminLayout
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]
@using QuranListeningApp.Domain.Interfaces
@using QuranListeningApp.Domain.Entities
@using QuranListeningApp.Domain.Enums
@inject IUserRepository UserRepository
@inject NavigationManager Navigation

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="page-title">
                <i class="fas fa-chart-line me-2"></i>
                التقارير والإحصائيات
            </h2>
            <p class="text-muted">عرض شامل للتقارير والإحصائيات المختلفة</p>
        </div>
        <button class="btn btn-outline-secondary" @onclick="GoBack">
            <i class="fas fa-arrow-left me-2"></i>
            العودة
        </button>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">جاري التحميل...</span>
        </div>
        <p class="mt-3 text-muted">جاري تحميل البيانات...</p>
    </div>
}
else
{
    <div class="row">
        <!-- Student Reports -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card h-100 report-card">
                <div class="card-body text-center">
                    <div class="report-icon mb-3">
                        <i class="fas fa-graduation-cap fa-4x text-info"></i>
                    </div>
                    <h5 class="card-title">تقارير الطلاب</h5>
                    <p class="card-text text-muted">
                        تقارير تقدم الطلاب وأدائهم في التلاوة
                    </p>
                    <ul class="list-unstyled text-start report-features">
                        <li><i class="fas fa-check text-success me-2"></i>تقدم الطالب الشخصي</li>
                        <li><i class="fas fa-check text-success me-2"></i>السور المنجزة</li>
                        <li><i class="fas fa-check text-success me-2"></i>الأخطاء والتحسينات</li>
                        <li><i class="fas fa-check text-success me-2"></i>الإحصائيات الزمنية</li>
                    </ul>
                </div>
                <div class="card-footer">
                    @if (students.Any())
                    {
                        <div class="dropdown w-100">
                            <button class="btn btn-info dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-eye me-2"></i>
                                اختر طالباً
                            </button>
                            <ul class="dropdown-menu w-100 student-dropdown">
                                @foreach (var student in students)
                                {
                                    <li>
                                        <a class="dropdown-item" @onclick="() => ViewStudentReport(student.Id)">
                                            @student.FullNameArabic
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <button class="btn btn-secondary w-100" disabled>
                            لا يوجد طلاب
                        </button>
                    }
                </div>
            </div>
        </div>

        <!-- Coming Soon Reports -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card h-100 report-card coming-soon">
                <div class="card-body text-center">
                    <div class="report-icon mb-3">
                        <i class="fas fa-chart-pie fa-4x text-muted"></i>
                    </div>
                    <h5 class="card-title text-muted">تقارير إضافية</h5>
                    <p class="card-text text-muted">
                        قريباً: تقارير المعلمين وملخص النظام
                    </p>
                    <ul class="list-unstyled text-start report-features">
                        <li><i class="fas fa-clock text-warning me-2"></i>تقارير نشاط المعلمين</li>
                        <li><i class="fas fa-clock text-warning me-2"></i>تقرير ملخص النظام</li>
                        <li><i class="fas fa-clock text-warning me-2"></i>إحصائيات شاملة</li>
                        <li><i class="fas fa-clock text-warning me-2"></i>تصدير متقدم</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <button class="btn btn-secondary w-100" disabled>
                        <i class="fas fa-hourglass-half me-2"></i>
                        قريباً
                    </button>
                </div>
            </div>
        </div>

        <!-- Export Information -->
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-download me-2"></i>
                        خيارات التصدير
                    </h5>
                    <p class="text-muted mb-3">
                        يمكن تصدير تقارير الطلاب بصيغات مختلفة لسهولة المشاركة والحفظ
                    </p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-file-excel text-success me-3"></i>
                                <div>
                                    <strong>تصدير Excel</strong>
                                    <p class="mb-0 text-muted small">ملفات جداول بيانات قابلة للتحرير</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-file-pdf text-danger me-3"></i>
                                <div>
                                    <strong>تصدير PDF</strong>
                                    <p class="mb-0 text-muted small">تقارير جاهزة للطباعة والمشاركة</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .report-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .report-card:hover:not(.coming-soon) {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .coming-soon {
        opacity: 0.7;
        background-color: #f8f9fa;
    }

    .report-icon {
        opacity: 0.8;
    }

    .report-features {
        font-size: 0.9rem;
    }

    .report-features li {
        margin-bottom: 0.5rem;
    }

    .page-header {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #dee2e6;
    }

    .page-title {
        color: #495057;
        font-weight: 600;
        margin-bottom: 0;
    }

    .student-dropdown {
        max-height: 300px;
        overflow-y: auto;
    }

    .dropdown-item {
        cursor: pointer;
    }

    .dropdown-item:hover {
        background-color: #f8f9fa;
    }
</style>

@code {
    private List<User> students = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            var allUsers = await UserRepository.GetAllAsync();
            students = allUsers.Where(u => u.Role == UserRole.Student && u.IsActive).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ViewStudentReport(Guid studentId)
    {
        Navigation.NavigateTo($"/admin/reports/student/{studentId}");
    }

    private void GoBack() => Navigation.NavigateTo("/admin/dashboard");
}