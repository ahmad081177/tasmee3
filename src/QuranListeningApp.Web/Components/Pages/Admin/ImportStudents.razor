    private string FormatFileSize(long bytes)
    {
        const int unit = 1024;
        if (bytes < unit) return $"{bytes} B";
        int exp = (int)(Math.Log(bytes) / Math.Log(unit));
        return $"{bytes / Math.Pow(unit, exp):F1} {("KMGTPE")[exp - 1]}B";
