@code {
    [Parameter] public Guid? StudentId { get; set; }
    
    private List<Domain.Entities.User> students = new();
    private List<Domain.Entities.User> filteredStudents = new();
    private List<Domain.Entities.SurahReference> surahs = new();
    
    private string? selectedStudentId;
    private int? selectedSurahNumber;
    private int fromAyahNumber = 1;
    private int toAyahNumber = 1;
    private int majorErrors = 0;
    private int minorErrors = 0;
    private bool isPassed = false;
    private decimal? grade = null;
    private string notes = "";
    private DateTime sessionDate = DateTime.Today;
    private int maxAyah = 286;
    
    private string studentSearchQuery = "";
    private bool showStudentDropdown = false;
    
    private bool isSaving = false;
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        
        // Pre-select student if coming from student list
        if (StudentId.HasValue)
        {
            // Verify the student exists and is active
            var preSelectedStudent = students.FirstOrDefault(s => s.Id == StudentId.Value);
            if (preSelectedStudent != null)
            {
                selectedStudentId = StudentId.Value.ToString();
                studentSearchQuery = preSelectedStudent.FullNameArabic;
            }
            else
            {
                // Student not found or inactive - redirect to regular add session
                Navigation.NavigateTo("/teacher/sessions/new");
            }
        }
    }

    private async Task LoadData()
    {
        var allUsers = await UserService.GetAllUsersAsync();
        students = allUsers.Where(u => u.Role == UserRole.Student && u.IsActive).OrderBy(u => u.FullNameArabic).ToList();
        filteredStudents = students;
        
        var allSurahs = await SurahRepository.GetAllAsync();
        surahs = allSurahs.OrderBy(s => s.SurahNumber).ToList();
    }

    private void FilterStudents()
    {
        if (string.IsNullOrWhiteSpace(studentSearchQuery))
        {
            filteredStudents = students;
        }
        else
        {
            var search = studentSearchQuery.ToLower();
            filteredStudents = students.Where(s =>
                (s.FullNameArabic?.ToLower().Contains(search) ?? false) ||
                (s.GradeLevel?.ToLower().Contains(search) ?? false) ||
                (s.IdNumber?.ToLower().Contains(search) ?? false) ||
                (s.PhoneNumber?.ToLower().Contains(search) ?? false)
            ).ToList();
        }
        showStudentDropdown = true;
    }

    private void SelectStudent(Domain.Entities.User student)
    {
        selectedStudentId = student.Id.ToString();
        studentSearchQuery = student.FullNameArabic;
        showStudentDropdown = false;
    }

    private void ClearStudentSelection()
    {
        selectedStudentId = null;
        studentSearchQuery = "";
        filteredStudents = students;
    }

    private void OnSurahChanged()
    {
        if (selectedSurahNumber.HasValue)
        {
            var surah = surahs.FirstOrDefault(s => s.SurahNumber == selectedSurahNumber.Value);
            if (surah != null)
            {
                maxAyah = surah.TotalAyahs;
                fromAyahNumber = 1;
                toAyahNumber = Math.Min(10, maxAyah);
            }
        }
    }

    private async Task SaveSession()
    {
        errorMessage = "";

        if (string.IsNullOrEmpty(selectedStudentId))
        {
            errorMessage = "الرجاء اختيار الطالب";
            return;
        }

        if (!selectedSurahNumber.HasValue)
        {
            errorMessage = "الرجاء اختيار السورة";
            return;
        }

        if (fromAyahNumber < 1 || toAyahNumber < 1 || fromAyahNumber > toAyahNumber)
        {
            errorMessage = "الرجاء إدخال نطاق آيات صحيح";
            return;
        }

        // Validate grade if provided (must be in 0.5 increments)
        if (grade.HasValue)
        {
            if (grade.Value < 0 || grade.Value > 100)
            {
                errorMessage = "الدرجة يجب أن تكون بين 0 و 100";
                return;
            }
            
            // Check if grade is in 0.5 increments
            if ((grade.Value * 2) % 1 != 0)
            {
                errorMessage = "الدرجة يجب أن تكون بنصف درجة فقط (مثال: 90، 90.5، 91، 91.5)";
                return;
            }
        }

        try
        {
            isSaving = true;

            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var currentUserId = Guid.Parse(authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? Guid.Empty.ToString());

            var session = new Domain.Entities.ListeningSession
            {
                StudentUserId = Guid.Parse(selectedStudentId),
                TeacherUserId = currentUserId,
                SurahNumber = selectedSurahNumber.Value,
                FromAyahNumber = fromAyahNumber,
                ToAyahNumber = toAyahNumber,
                MajorErrorsCount = majorErrors,
                MinorErrorsCount = minorErrors,
                IsCompleted = isPassed,
                Grade = grade,
                Notes = notes,
                SessionDate = sessionDate
            };

            await SessionService.CreateSessionAsync(session, currentUserId);
            Navigation.NavigateTo("/teacher/dashboard");
        }
        catch (Exception ex)
        {
            errorMessage = $"خطأ: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void GoBack() => Navigation.NavigateTo("/teacher/dashboard");
}
