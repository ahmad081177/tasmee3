@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using QuranListeningApp.Web.Components.Shared
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IWebHostEnvironment Environment

<div class="page teacher-layout">
    <main class="teacher-main">
        <div class="top-row teacher-header">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg teacher-navbar">
                    <a class="navbar-brand" href="/teacher">
                        @if (Environment.IsDevelopment())
                        {
                            <span class="env-indicator dev">DEV</span>
                        }
                        else if (Environment.IsProduction())
                        {
                            <span class="env-indicator prod">PROD</span>
                        }
                        <span class="navbar-brand-icon">📖</span>
                        نظام سماع القرآن
                    </a>
                    
                    <SchoolBranding />
                    
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavTeacher" aria-controls="navbarNavTeacher" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    
                    <div class="collapse navbar-collapse" id="navbarNavTeacher">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/teacher" Match="NavLinkMatch.All">
                                    <span class="nav-icon">🏠</span> لوحة التحكم
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/teacher/students">
                                    <span class="nav-icon">👥</span> الطلاب
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/teacher/sessions">
                                    <span class="nav-icon">📝</span> جلسات السماع
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/teacher/sessions/new">
                                    <span class="nav-icon">➕</span> تسجيل جلسة جديدة
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/teacher/profile">
                                    <span class="nav-icon">👤</span> الملف الشخصي
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">
                                    <span class="nav-icon">🚪</span> تسجيل الخروج
                                </a>
                            </li>
                        </ul>
                        
                        <div class="navbar-nav d-none d-lg-flex">
                            <div class="nav-item">
                                <a class="nav-link" href="/teacher/profile">
                                    <span class="nav-icon">👤</span> الملف الشخصي
                                </a>
                            </div>
                            <div class="nav-item">
                                <a class="nav-link" href="/logout">
                                    <span class="nav-icon">🚪</span> تسجيل الخروج
                                </a>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>

        <article class="content px-4 teacher-content">
            @Body
        </article>
    </main>
    
    <DatabaseLoadingIndicator />
</div>

<div id="blazor-error-ui">
    حدث خطأ غير متوقع.
    <a href="" class="reload">إعادة تحميل</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    .teacher-layout {
        direction: rtl;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
    }

    .teacher-navbar {
        background: linear-gradient(135deg, #2E7D32 0%, #4CAF50 100%);
        padding: 8px 0;
    }

    .teacher-header {
        background: linear-gradient(135deg, #2E7D32 0%, #4CAF50 100%);
        border-bottom: 2px solid #1B5E20;
        padding: 0;
    }

    .navbar-brand {
        color: #E8F5E8 !important;
        font-size: 1.2rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        margin-left: 2rem;
    }

    .navbar-brand-icon {
        font-size: 1.5rem;
    }

    .env-indicator {
        font-size: 0.6rem;
        padding: 2px 6px;
        border-radius: 4px;
        margin-right: 8px;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .env-indicator.dev {
        background: #28a745;
        color: white;
    }

    .env-indicator.prod {
        background: #dc3545;
        color: white;
    }

    .navbar-nav .nav-link {
        color: #E8F5E8 !important;
        padding: 8px 16px;
        margin: 0 4px;
        border-radius: 6px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .navbar-nav .nav-link:hover {
        background: rgba(255, 255, 255, 0.1);
        color: #FFFFFF !important;
    }

    .navbar-nav .nav-link.active {
        background: rgba(255, 255, 255, 0.2);
        color: #FFFFFF !important;
        font-weight: 600;
    }

    .nav-icon {
        font-size: 1rem;
        width: 18px;
        text-align: center;
    }

    .teacher-content {
        background: #FAFAFA;
        min-height: calc(100vh - 80px);
        padding: 24px;
    }

    .teacher-main {
        flex: 1;
    }

    .navbar-toggler {
        border-color: rgba(255, 255, 255, 0.3);
    }

    .navbar-toggler-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.8%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='m4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .teacher-content {
            padding: 15px;
        }

        .navbar-brand {
            margin-left: 0;
            font-size: 1rem;
        }

        .navbar-brand-icon {
            font-size: 1.2rem;
        }
        
        .navbar-nav {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            gap: 8px;
            padding: 10px 0;
        }
        
        .navbar-nav .nav-item {
            flex: 1 1 calc(50% - 8px);
            min-width: 140px;
            max-width: 200px;
        }
        
        .navbar-nav .nav-link {
            justify-content: center;
            padding: 12px 8px;
            margin: 0;
            font-size: 14px;
            border-radius: 6px;
            background: rgba(255, 255, 255, 0.1);
            text-align: center;
            display: block;
        }

        .navbar-collapse {
            padding-top: 10px;
        }

        .navbar-toggler {
            padding: 8px 12px;
            border: 2px solid rgba(255, 255, 255, 0.5);
        }

        .navbar-toggler-icon {
            width: 24px;
            height: 24px;
        }
    }

    .navbar-collapse {
        transition: all 0.3s ease-in-out;
    }

    .navbar-collapse.show {
        display: block !important;
    }

    .navbar-collapse.collapsing {
        display: block;
        overflow: hidden;
    }
</style>